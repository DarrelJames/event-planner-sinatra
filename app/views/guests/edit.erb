<h1>Edit Guest</h1>
<form class="" action="/guests" method="post">
  <input type="hidden" name="_method" value="PATCH">
  <label for="name">Name</label>
  <input type="text" name="guest[name]" id="name" value="<%= @guest.name %>">

  <h3>Events</h3>

  <% @guest.events.each do |event| %>
    <input type="checkbox" name="guest[event_ids][]" id="<%= event.id %>" value="<%= event.id %>" <%= "checked" if current_user.events.include?(event) %>><%= event.name %></input>
  <% end %>
  <br><br>

  <input type="submit" value="Add Guest">
  <button type="button" name="button" onclick="window.location.href = '/guests';">Back</button>
</form>
